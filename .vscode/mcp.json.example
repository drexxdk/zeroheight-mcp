{
  "mcpServers": {
    "zeroheight-scraper": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "http://localhost:3000/api/mcp",
        "--header",
        "X-API-Key: ${MCP_API_KEY}"
      ],
      "env": {
        "MCP_API_KEY": "your-local-api-key-here"
      }
    },
    "zeroheight-scraper-prod": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://your-deployment-url.vercel.app/api/mcp",
        "--header",
        "Authorization: Bearer ${MCP_API_KEY}"
      ],
      "env": {
        "MCP_API_KEY": "your-production-api-key-here"
      }
    }
  }
}
